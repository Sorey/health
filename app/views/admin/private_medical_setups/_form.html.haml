= form_for(@private_medical_setup, html: { class: 'form-horizontal' })  do |f|
  .form-group
    .col-sm-10.col-md-offset-2
      - if @private_medical_setup.errors.any?
        #error_explanation
          %h2
            = pluralize(@private_medical_setup.errors.count, "error")
            prohibited this news from being saved:
          %ul
            - @private_medical_setup.errors.full_messages.each do |msg|
              %li= msg

  .form-group
    .field
      = f.label :name, 'Назва', :class => 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :name, :class => 'form-control input-responsive'
  .form-group
    = f.label :address,'Адреса', :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :address, :class => 'form-control input-responsive'
  .form-group
    .actions
      .col-sm-offset-2.col-sm-10
        = f.submit buttom, :class => 'btn btn-primary'