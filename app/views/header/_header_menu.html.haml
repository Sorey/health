:scss

  .header-menu{
    background-color: rgb(0, 169, 81);
    .navbar-collapse{
      max-height: inherit;
    }
    .navbar-default .navbar-brand:hover, .navbar-default .navbar-brand:focus{
      background-color: rgb(0, 189, 91);
      transition-duration: .7s;
    }
    .navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > .open > a{
      background-color: rgb(0, 189, 91);
      color: white;
      transition-duration: .7s;
    }
    .navbar-default .navbar-nav > li > a:focus{
      color: white;
    }
    .navbar-nav > li > .dropdown-menu{
      min-width: 100%;
      border: 1px solid rgb(0, 189, 91);
      border-top: none;
      border-radius: 0;
      background-color: white;
      padding: 1px 0;
      .divider{
        margin: 0;
        background-color: rgb(0, 189, 91);
      }
      li{
        a{
          padding: 8px 10px;
          font-weight: 700;
        }
      }
    }
    .dropdown:hover  .dropdown-menu{
      -webkit-transition: all 0.6s;
      -moz-transition: all 0.6s;
      -ms-transition: all 0.6s;
      -o-transition: all 0.6s;
      transition: all 0.6s linear;

      max-height: 0;
      display: block;
      overflow: hidden;
      opacity: 0.1;
    }
    .dropdown.open .dropdown-menu{
      max-height: 500px;
      opacity: 1;
    }
    .navbar{
      background-color: rgb(0, 169, 81);
      margin-bottom: 0;
      border: none;
      .navbar-nav>li>a{
        font-size: 16px;
      }
      a{
        color: white;
      }
      li>a{
        color: white;
      }
      .dropdown-menu > li > a{
        color: rgb(0, 179, 91);
      }
      .dropdown-menu > li > .a-within{
        background: transparent;
        padding: 3px 4px 3px 14px;
        font-weight: 500;
      }
      .dropdown-menu > li > .a-within:hover, .dropdown-menu > li > .a-within:focus{
        background: #F3F3F3;
      }
      .deep-level{
        a:hover{
          background: #F5F5F5;
        }
        li{
          list-style: none;
          padding-bottom: 5px !important;
          a{
            color: #00B35B !important;
            font-weight: normal !important;
            text-decoration: none;
          }
        }
      }
    }
  }

.header-menu
  .container
    .row
      %nav.navbar.navbar-default
        -#.container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} Головна
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          =  @menu.html_safe if @menu

:javascript

  $(document).ready(function(){

      // Плавный скролл по якорям
      $('a[href^="#"]').click(function () {
          elementClick = $(this).attr("href");
          destination = $(elementClick).offset().top;
          if($.browser.safari){
          $('body').animate( { scrollTop: destination }, 1000 );
          } else {
              $('html').animate( { scrollTop: destination }, 1000 );
          }
          return false;
     });
  });

