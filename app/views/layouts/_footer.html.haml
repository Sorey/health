:scss
  .footer{
    padding-bottom: 20px;
    background-color: #eef7f2;
    .three-colmn{
      padding: 30px 0 30px;
      .f-column{
        //height: 100%;
        //border-right: 2px solid rgba(214,235,224,0.8);
        h3{
          margin-top: 0;
        }
        a{
          color: #008f44;
        }
        a:hover{
          color: black;
          text-decoration: none;
        }
        .icon{
          i{
            color: #008f44;
          }
          padding-left: 0px;
        }
        .news{
          p{
            span{
              color: #777777;
            }
          }
        }
        .info{
          p{
            span{
              color: #008f44;
            }
          }
        }
      }
      .f-column:nth-child(2){
        border-left: 2px solid rgba(214,235,224,0.8);
        border-right: 2px solid rgba(214,235,224,0.8);
      }
    }
    .owner-year{
      margin: 0 auto;
      padding: 10px;
      text-align: center;
      border-top: 2px solid rgba(214,235,224,0.8);
      color: #008f44;
    }
  }

