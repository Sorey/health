:scss

  .private-medical_setups{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new{
        display: inline-block;
        float: right;
        .btn{
          margin:20px 0 5px;
        }
      }
    }
    table{
      border-style:solid;
      border-color:#63B8FF;
      font-size: 13px;
      thead{
        th:last-child{
          text-align: center;
        }
      }
      tbody{
        td:last-child{
          text-align: center;
        }
        td .btn{
         display: inline-block;
         margin: 0px 0px 5px;
         padding: 4px 6px;
         width: 30px;
        }
      }
    }
  }

.private-medical_setups
  .container
    .heading
      .title
        %h1 Приватні структури Вінницької області
      .btn-new
        = link_to 'Нова приватна cтруктура', new_admin_private_medical_setup_path, :class => 'btn btn-primary'
  .container
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th{rowspan: 2} № п/п
          %th{rowspan: 2} Структура
          %th{rowspan: 2} Адреса
          %th{rowspan: 2} Дія
      %tbody
        - m_iterator = 1
        - @private_medical_setups.each do |m|
          %tr
            %td= m_iterator
            %td= m.name
            %td= m.address
            %td
              = link_to '<i class="fa fa-eye "></i>'.html_safe, admin_private_medical_setup_path(m), title: "Переглянути",  :class => 'btn btn-info'
              = link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_admin_private_medical_setup_path(m), title: "Редагувати", :class => 'btn btn-primary'
              = link_to '<i class="fa fa-trash-o"></i>'.html_safe, m, title: "Видалити", :method => :delete, :data => { :confirm => 'Ви впевнені?' }, :class => 'btn btn-danger'
          - m_iterator = m_iterator + 1