:scss
  .header-top{
    padding: 30px 0 15px;
    .logo-link{
      display: block;
      .gerb{
        width:55px;
        display:inline-block;
        img{
          opacity: .5;
          width: 100%;
          height: auto;
        }
      }
      .image-logos{
        white-space:  nowrap;
      }
      .logo{
        display:inline-block;
        width: 80px;
        img{
          width: 100%;
          height: auto;
        }
      }
      .title{
        font-size: 38px;
        line-height: 1;
        letter-spacing: 1px;
        color: #008f44;
        font-family: Century Gothic;
      }
    }
    .welcome{
      .message{
        padding-top: 20px;
        span{
          color: #008f44;
          font-size: 13px;
          display: block;
          text-align: right;
        }
      }
      .phone-icon{
        padding-top: 15px;
      }
      .number{
        padding-top: 7px;
        text-align: center;
        font-size: 22px;
        color: #008f44;
      }
    }
  }

.header-top
  .container
    .row
      .col-md-6
        %a.row.logo-link{:href => root_path}
          .col-md-3.col-sm-3.col-xs-5.image-logos
            .gerb
              = image_tag 'gerb_vin.png'
            .logo
              = image_tag 'snake.png'
          .col-md-9.col-sm-9.col-xs-7
            .title
              Охорона здоров'я Вінниччини
      .col-md-6
        .row.welcome
          .col-md-6
            .message
              = form_tag search_path, :method => :get do
                = text_field_tag :search, params[:search], placeholder: 'Пошук...', :class => 'form-control'
          .col-md-6
            .row
              .col-md-2.col-sm-2.col-xs-3
                .phone-icon
                  = image_tag 'phone-icon.png'
              .col-md-10.col-sm-10.col-xs-9
                - if @header_numbers
                  = @header_numbers.description.html_safe
                - else
                  .number
                    .phone (0432) 35-37-43,
                    .phone (0432) 67-01-20