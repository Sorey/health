= form_for(@news, html: { class: 'form-horizontal' })  do |u|
  .form-group
    .col-sm-10.col-md-offset-2
      - if @news.errors.any?
        #error_explanation
          %h2
            = pluralize(@news.errors.count, "error")
            prohibited this news from being saved:
          %ul
            - @news.errors.full_messages.each do |msg|
              %li= msg

  .form-group
    .field
      = u.label :title, 'Заголовок<span style="color:#F98C39;"> *</span>'.html_safe, :class => 'col-sm-2 control-label'
      .col-sm-10
        = u.text_field :title, :class => 'form-control input-responsive'
  .form-group
    = u.label :pre_text,'Cтислий опис', :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.text_field :pre_text, :class => 'form-control input-responsive'
  -#.form-group
    = u.label :description,'Повний опис <span style="color:#F98C39;">*</span>'.html_safe, :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.text_area :description, :class => 'form-control input-responsive'
  .form-group
    = u.label :image, 'Картинка <span style="color:#F98C39;">*</span>'.html_safe, :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.file_field :image, :class => 'form-control input-responsive'
  .form-group
    = u.label :publish_on, 'Публікувати? ', :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.check_box :publish_on, :class => 'form-control input-responsive'
  .form-group
    =u.label :description,'Повний опис <span style="color:#F98C39;">*</span>'.html_safe, :class => 'col-sm-2 control-label'
    .col-sm-10
      -#= u.cktext_area :description,:as => ckeditor, :input_html =>{ :ckeditor => {:toolbar => 'mini'} }, :class => 'col-sm-2 control-label'
      = u.cktext_area :description, :ckeditor => {:toolbar => 'mini', :uiColor => '#E1E4E3',:language => 'uk',:height => '400',:autoParagraph => true }, :class => 'form-control input-responsive'


