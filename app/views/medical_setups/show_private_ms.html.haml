:scss
  .private-medical-setups{
    .heading{
      .title{
        width: 100%;
        h1{
          text-align: center;
        }
      }
      .btn-new-news{
        display: inline-block;
        float: right;
        .btn{
          margin:20px 0 5px;
        }
      }
    }
    table{
      border-style:solid;
      border-color:#0BBA6A;
      border-radius: 3px;
      font-size: 13px;
      thead{
        th{
          vertical-align: middle;
          text-align: center;
        }
      }
      tbody{
        td:nth-child(n+7), td:first-child{
          text-align: center;
        }
        td .btn{
         display: inline-block;
         margin: 0px 0px 5px;
         padding: 4px 6px;
         width: 30px;
        }
      }
    }
  }

.private-medical-setups
  .container
    .heading
      .title
        %h1 Список приватних медичних установ
  -#%h1= params[:category] ||= 'Список медичних установ'
  -#.btn-new-news
        -#- if current_user && current_user.admin?
        = link_to 'Нова медична установа', new_admin_medical_setup_path, :class => 'btn btn-primary'
  .container
    -#.col-md-10.col-md-offset-1
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th № п/п
          %th Назва медичної установи
          %th Адреса
      %tbody
        - m_iterator = 1
        - @private_medical_setups.each do |m|
          %tr
            %td= m_iterator
            -#%td= m.id.to_s.last(3)
            %td= m.name
            %td= m.address
            -#%td
              = link_to '<i class="fa fa-eye "></i>'.html_safe, admin_medical_setup_path(m), title: "Переглянути",  :class => 'btn btn-info'
              -#= link_to 'Редагувати', edit_admin_news_path(u), :class => 'btn btn-default'
              = link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_medical_setup_path(m), title: "Редагувати", :class => 'btn btn-primary'
              = link_to '<i class="fa fa-trash-o"></i>'.html_safe, m, title: "Видалити", :method => :delete, :data => { :confirm => 'Ви впевнені?' }, :class => 'btn btn-danger'

            - m_iterator = m_iterator + 1