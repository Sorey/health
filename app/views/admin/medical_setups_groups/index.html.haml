:scss

  .medical_setups-groups{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new-news{
        display: inline-block;
        float: right;
        .btn{
          margin:20px 0 5px;
        }
      }
    }
    table{
      border-style:solid;
      border-color:#63B8FF;
      font-size: 13px;
      thead{
        th{
          vertical-align: middle;
          text-align: center;
        }
      }
      tbody{
        td:first-child, td:last-child{
          text-align: center;
        }
        td .btn{
         display: inline-block;
         margin: 0px 0px 5px;
         padding: 4px 6px;
         width: 30px;
        }
      }
    }
  }

.medical_setups-groups
  .container
    .heading
      .title
        %h1= 'Список груп медичних установ'
      .btn-new-news
        = link_to 'Нова група', new_admin_medical_setups_group_path, :class => 'btn btn-primary'
  .container
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th{rowspan: 2} № п/п
          %th{rowspan: 2} Назва групи медичних установ
          %th{rowspan: 2} Дія
      %tbody
        - m_iterator = 1
        - @medical_setups_groups.each do |m|
          %tr
            %td= m_iterator
            %td= m.name
            %td
              = link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_admin_medical_setups_group_path(m), title: "Редагувати", :class => 'btn btn-primary'
              = link_to '<i class="fa fa-trash-o"></i>'.html_safe, m, title: "Видалити", :method => :delete, :data => { :confirm => 'Ви впевнені?' }, :class => 'btn btn-danger'
            - m_iterator = m_iterator + 1
    .instruction
      *** При перейменівані групи обов'язково відредагуйте адресу
      = link_to 'пункту головного меню', admin_menu_items_path
      на цю групу.