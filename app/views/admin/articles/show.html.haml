:scss
  .article{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-article{
        display: inline-block;
        float: right;
        .btn{

          margin:20px 0 5px;
        }
      }
    }
    .example{
      background: white;
    }

  }
.article
  .container
    - if notice
      %p#notice= notice
    .heading
      .title
        %h1
          Стаття
          %em
            = @article.title
      .btn-article
        = link_to 'Усі статті', admin_articles_path, :class => 'btn btn-primary'
        -#- if current_user && current_user.editor?
        = link_to 'Редагувати', edit_admin_article_path(@article), :class => 'btn btn-primary'
        -#- if current_user && current_user.admin?
        = link_to 'Видалити', admin_article_path(@article), :class => 'btn btn-primary',
          method: :delete,
          data: { confirm: 'Ви впевнені?' }
    .example.clearfix
      = @article.description.html_safe ||= "empty"
  -#.container
    %table.table.table-condensed.table-striped{:style => "border-style:solid; border-color:#63B8FF"}
      %tbody
        %tr
          %th #
          %td= @article.id
        %tr
          %th Title
          %td= @article.title
        %tr
          %th Description
          %td= @article.description.html_safe ||= "empty"
