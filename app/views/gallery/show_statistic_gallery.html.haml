:scss
  .gallery-photo{
    .title{
      h3{
        text-align: center;
      }
    }
    #images-paginator{
      text-align: center;
      .pagination{
      }
    }
    a.fancybox-button{
      img{
        width: 32.5%;
        padding: 5px;
      }
    }
  }

.gallery-photo
  .container
    .title
      %h3
        = @title
    #images-paginator
      = paginate @images, :remote => true
    #results
      = render partial: "images", :locals => { images: @images }

:javascript

  $(document).ready(function() {
    $(".fancybox-button").fancybox({
      prevEffect	: 'none',
      nextEffect	: 'fade',
      helpers		: {
        title	: false,
        //title	: { type : 'inside' },
        buttons	: {},
        thumbs	: {
          width	: 100,
          height: 100
        }
      }
    });
  });