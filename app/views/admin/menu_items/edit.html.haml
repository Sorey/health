:scss
  .edit-menu-item{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new-news{
        display: inline-block;
        float: right;
        .btn{

          margin:20px 0 5px;
        }
      }
    }
  }

.edit-menu-item
  .container
    .heading
      .title
        %h1 Editing menu_item
      .btn-new-news
        -#= link_to 'Show', @menu_item, :class => 'btn btn-primary'
        = link_to 'Back', admin_menu_items_path, :class => 'btn btn-primary'
  .container
    .form
      = render 'form'
