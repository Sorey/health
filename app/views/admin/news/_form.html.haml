  .form-group
    .actions
      .col-sm-offset-2.col-sm-10
        %p
          = '<span style="color:#F98C39;"> * </span>'.html_safe
          = "- Поля обов'язкові для заповнення."
      .col-sm-offset-2.col-sm-10
