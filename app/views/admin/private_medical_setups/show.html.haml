.show-private-medical-setup
  .container
    - if notice
      %p#notice= notice
    %p
      %h2
        Приватна медична установа
        %em
          = @private_medical_setup.name
  .container
    %table.table.table-condensed.table-striped{:style => "border-style:solid; border-color:#63B8FF"}
      %tbody
        %tr
          %th Назва медичної установи
          %td= @private_medical_setup.name
        %tr
          %th Адреса
          %td= @private_medical_setup.address

    = link_to 'Приватні медичні установи', admin_private_medical_setups_path, :class => 'btn btn-primary'
    -#- if current_user && current_user.editor?
    = link_to 'Редагувати', edit_admin_private_medical_setup_path(@private_medical_setup), :class => 'btn btn-primary'
    -#- if current_user && current_user.admin?
    = link_to 'Видалити', @private_medical_setup, :class => 'btn btn-primary', |
      method: :delete,                                                  |
      data: { confirm: 'Ви впевнені?' }                                |