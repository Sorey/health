= form_for @poll, html: { class: 'form-horizontal' } do |f|
  - if @poll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poll.errors.count, "error")} prohibited this @@poll from being saved:"
      %ul
        - @poll.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .field
      = f.label :question, 'Назва', :class => 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :question, :class => 'form-control input-responsive'
  .form-group
    .field
      = f.label :publish_on, 'Назва', :class => 'col-sm-2 control-label'
      .col-sm-10
        = f.check_box :publish_on, :class => 'form-control input-responsive'
  .form-group
    .actions
      .col-sm-offset-2.col-sm-10
        = f.submit 'Save', :class => 'btn btn-primary'