:scss
  .header-top{
    padding: 30px 0 15px;
    .logo{
      width: 80px;
      img{
        width: 100%;
        height: auto;
        //border-radius: 50px;
        //background: white;
        //padding: 5px 0 0 0;
      }
        //background: transparent url('/assets/images/logo.png');
        //background-repeat: no-repeat;
    }
    .title{
      font-size: 30px;
      color: #008f44;
      font-family: Century Gothic;
    }
    .welcome{
      .message{
        padding-top: 20px;
        span{
          color: #008f44;
          font-size: 13px;
          display: block;
          text-align: right;
        }
      }
      .phone-icon{
        padding-top: 15px;
      }
      .number{
        padding-top: 20px;
