- @articles.each do |article|
  %tr
    %td= article.title
    %td= article.title_english
    %td= article.publish_on
    %td= article.created_at.to_s.first(10)
    %td= article.admin_articles_group.title unless article.admin_articles_group.nil?
    %td= link_to '<i class="fa fa-eye "></i>'.html_safe, article, title: "Переглянути",  :class => 'btn btn-info'
    %td= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_admin_article_path(article), title: "Редагувати", :class => 'btn btn-primary'
    %td= link_to '<i class="fa fa-trash-o"></i>'.html_safe, article, title: "Видалити", :method => :delete, :data => { :confirm => 'Ви впевнені?' }, :class => 'btn btn-danger'
