:scss
  .admin_all_news{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new-news{
        display: inline-block;
        float: right;
        .btn{

          margin:20px 0 5px;
        }
      }
    }

  }

.admin_all_news
  .container
    .heading
      .title
        %h1 Список пунктів Головного меню
      .btn-new-news
        -#- if current_user && current_user.admin?
        = link_to 'Створити пункт меню', new_menu_item_path, :class => 'btn btn-primary'
  .container
    %table.table.table-condensed.table-striped{:style => "border-style:solid; border-color:#63B8FF"}
      %thead
        %tr
          -#%th Type menu item
          -#%th Type menu
          %th Title
          %th Link
          %th Parent
          %th Order
          %th
          %th
          %th
      %tbody
        = @menu.html_safe
        -#- @menu_items.each do |menu_item|
          %tr
            = menu_item.id
            %td= menu_item.type_level
            %td= menu_item.type_item
            %td= menu_item.title
            %td
              - unless  menu_item.link.blank?
                = "+"
              - else
                = "-"
            %td= menu_item.parent_id
            %td= menu_item.order_item
            %td= link_to 'Show', menu_item
            %td= link_to 'Edit', edit_menu_item_path(menu_item)
            %td= link_to 'Destroy', menu_item, :method => :delete, :data => { :confirm => 'Are you sure?' }
