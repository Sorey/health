= form_for [@admin_question, @reply], html: { class: 'form-horizontal' } do |f|
  - if @reply.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reply.errors.count, "error")} prohibited this @admin_question from being saved:"
      %ul
        =debug @reply.errors.inspect
        - @reply.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .field
      = f.label :answer, 'Назва', :class => 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :answer, :class => 'form-control input-responsive'
  .form-group
    .actions
      .col-sm-offset-2.col-sm-10
        = f.submit :class => 'btn btn-primary'