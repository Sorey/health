:scss
  .private-medical_setups{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new-news, .medical_setups_groups{
        display: inline-block;
        float: right;
        .btn{
          margin:20px 0 5px;
        }
      }
    }
    table{
      font-size: 13px;
      thead{
        th{
          vertical-align: middle;
          //text-align: center;
        }
        th:last-child{
          //vertical-align: middle;
          text-align: center;
        }
      }
      tbody{
        td:nth-child(n+7), td:first-child{
          //text-align: center;
        }
        td:last-child{
          text-align: center;
        }
        td .btn{
         display: inline-block;
         margin: 0px 0px 5px;
         padding: 4px 6px;
         width: 30px;
        }
      }
    }
    .medical_setups_groups{
      display: inline-block;
      float: right;
      .btn{
        margin: 5px 0 20px;
      }
    }
  }

.private-medical_setups
  .container
    .heading
      .title
        %h1 Список приватних медичних установ
      .btn-new-news
        -#- if current_user && current_user.admin?
        = link_to 'Нова приватна медична установа', new_admin_private_medical_setup_path, :class => 'btn btn-primary'
  .container
    -#.col-md-10.col-md-offset-1
    %table.table.table-condensed.table-striped{:style => "border-style:solid; border-color:#63B8FF"}
      %thead
        %tr
          %th{rowspan: 2} № п/п
          %th{rowspan: 2} Назва медичної установи
          %th{rowspan: 2} Адреса
          %th{rowspan: 2} Дія
      %tbody
        - m_iterator = 1
        - @private_medical_setups.each do |m|
          %tr
            %td= m_iterator
            -#%td= m.id.to_s.last(3)
            %td= m.name
            %td= m.address
            %td
              = link_to '<i class="fa fa-eye "></i>'.html_safe, admin_private_medical_setup_path(m), title: "Переглянути",  :class => 'btn btn-info'
              -#= link_to 'Редагувати', edit_admin_news_path(u), :class => 'btn btn-default'
              = link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_admin_private_medical_setup_path(m), title: "Редагувати", :class => 'btn btn-primary'
              = link_to '<i class="fa fa-trash-o"></i>'.html_safe, m, title: "Видалити", :method => :delete, :data => { :confirm => 'Ви впевнені?' }, :class => 'btn btn-danger'

            - m_iterator = m_iterator + 1