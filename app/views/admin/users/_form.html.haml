= form_for(@user, html: { class: 'form-horizontal' })  do |u|
  .form-group
    .col-sm-10.col-md-offset-2
      - if @user.errors.any?
        #error_explanation
          %h2
            = pluralize(@user.errors.count, "error")
            prohibited this user from being saved:
          %ul
            - @user.errors.full_messages.each do |msg|
              %li= msg
  .form-group
    .field
      = u.label :name, 'Login',:class => 'col-sm-2 control-label'
      .col-sm-10
        = u.text_field :name, :class => 'form-control input-responsive'
  .form-group
    .field
      = u.label :full_name, :class => 'col-sm-2 control-label'
      .col-sm-10
        = u.text_field :full_name, :class => 'form-control input-responsive'
  .form-group
    = u.label :email, :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.text_field :email, :class => 'form-control input-responsive'
  .form-group
    = u.label :password, :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.password_field :password, :class => 'form-control input-responsive'
  .form-group
    = u.label :password_confirmation, :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.password_field :password_confirmation, :class => 'form-control input-responsive'
  .form-group
    = u.label :role_title, :class => 'col-sm-2 control-label'
    .col-sm-10
      = u.select :admin_role_ids, Admin::Role.all.collect {|x| [x.title, x.id]}, {}, multiple: true,  :class => 'form-control input-responsive'
  .form-group
    .actions
      .col-sm-offset-2.col-sm-10
        = u.submit :class => 'btn btn-primary'