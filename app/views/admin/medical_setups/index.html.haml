.medical_setups
  .container
    .col-sm-11
      %h1 List medical setups
    .col-sm-1
      -#- if current_user && current_user.admin?
      %h1
        = link_to 'New medical setup', new_medical_setup_path, :class => 'btn btn-primary'
  -#= link_to "Show medical setup", medical_setup_path(m), :class => 'btn btn-primary'
  .container-fluid
    %table.table.table-condensed.table-striped{:style => "border-style:solid; border-color:#63B8FF"}
      %thead
        %tr
          %th{rowspan: 2} #
          %th{rowspan: 2} Назва закладу
          %th{rowspan: 2} Адреса
          %th{rowspan: 2} Телефон
          %th{rowspan: 2} Головний лікар
          %th{rowspan: 2} Email
          %th{colspan: 3} Ліцензія
          %th{rowspan: 2} Категорія
          -#%th{rowspan: 2} Сайт
          -#%th{rowspan: 2} Локація
        %tr
          -#%th Діє з
          -#%th Номер ліцензії
          -#%th Діє до
          %th Термін дії ліцензії з
          %th № ліцензії серія
          %th Термін дії акредитаційного сертифіката по
      %tbody
        - @medical_setups.each do |m|
          %tr
            %td= m.id
            %td= m.name
            %td= m.address
            %td= m.phone
            %td= m.head_doctor
            %td= m.email
            %td= m.date_start
            %td= m.number_license
            %td= m.date_finish
            %td= m.medical_level
            -#%td= m.site_address
            -#%td= m.medical_setup_category.name

              -#%td= link_to "Show medical setup", medical_setup_path(m), :class => 'btn btn-primary'