:scss
  .admin_all_news{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new-news{
        display: inline-block;
        float: right;
        .btn{

          margin:20px 0 5px;
        }
      }
    }

  }

.admin_all_news
  .container
    .heading
      .title
        %h1 Список новин
      .btn-new-news
        -#- if current_user && current_user.admin?
        = link_to 'Створити новину', new_admin_news_path, :class => 'btn btn-primary'
  .container
    %table.table.table-condensed.table-striped{:style => "border-style:solid; border-color:#63B8FF"}
      %thead
        %tr
          %th #
          %th Title
          %th Description
          %th Publish_on
          %th Picture
          %th Show
      %tbody
        - @news.each do |u|
          %tr
            %td= u.id
            %td= u.title
            %td= u.description
            %td= u.publish_on
            %td
              - if u.image?
                =image_tag u.image.thumb
            %td= link_to "Переглянути", admin_news_path(u), :class => 'btn btn-primary'