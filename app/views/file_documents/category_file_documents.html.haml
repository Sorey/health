:scss
  .file_documents{
    .heading{
      .title{
        width: 100%;
        h1{
          text-align: center;
        }
      }
      .btn-new-news{
        display: inline-block;
        float: right;
        .btn{
          margin:20px 0 5px;
        }
      }
    }
    table{
      //border-style:solid;
      //border-color:#0BBA6A;
      //border-radius: 3px;
      font-size: 16px;
      thead{
        th{
          &:last-child{
            text-align: right;
          }
          &:first-child{
            text-align: center;
            width: 50px;
          }
          .current {
            position:relative;
          }
          .current:before {
            position:absolute;
            font-family: FontAwesome;
            top:0;
            right:-10px;
          }
          .asc:before {
            content: "\f0de";
          }
          .desc:before {
            content: "\f0dd";
          }
        }
      }
      tbody{
        td{
          &:first-child{
            text-align: center;
          }
          &:last-child{
            text-align: right;
          }
          .btn{
           display: inline-block;
           margin: 0px 0px 5px;
           padding: 4px 6px;
           width: 30px;
          }
        }
      }
    }
  }

.file_documents
  .container
    .heading
      .title
        %h1= @file_document_category.title
  .container
    .file-documents-table.table-responsive
      %table.table.table-condensed.table-striped
        %thead
          %tr
            -#%th № п/п
            %th Файл
            %th Назва
            %th
              = sortable "year_publish", 'Затверджено'
        %tbody#results
          = render partial: "search_file_documents", :locals => { file_documents: @file_documents }
    .panel-paginate
      = paginate @file_documents #, :remote => true