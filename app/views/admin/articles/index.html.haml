:scss
  .admin-articles{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new{
        display: inline-block;
        float: right;
        .btn{
          margin:20px 0 5px;
        }
      }
    }
    table{
      border-bottom: 3px solid #B9B9B9;
      thead{
        th{
          white-space: nowrap;
        }
      }
      tbody{
        .des-html{
          overflow-y: scroll;
          width:100%;
          height: 300px;
        }
      }
    }
  }

.admin-articles
  .container
    .heading
      .title
        %h1 Список статей
      .btn-new
        = link_to 'Нова стаття', new_admin_article_path, :class => 'btn btn-primary'
      = render partial: 'search'
  .container
    .articles-table.table-responsive
      %table.table.table-condensed.table-striped
        %thead
          %tr
            %th
              = sortable "title", 'Назва'
            %th
              = sortable "title_english", 'URL назва'
            %th
              = sortable "publish_on", 'Публікувати?'
            %th
              = sortable "created_at", 'Дата створення'
            %th
              = sortable "admin_articles_group_id", 'Група'
            %th
            %th Дія
            %th
        %tbody#results
          = render partial: "search_articles", :locals => { articles: @articles }
    .panel-paginate
      = paginate @articles
