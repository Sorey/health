:scss

  .interview{
    border-bottom: 1px solid #cce7d9;
    .poll{
      box-shadow: 0 0 10px #cce7d9;
      padding: 5px 7px;
      p{
        font-weight: bold !important;
        font-size: 15.5px;
      }
      .head{
        margin: 10px 0;
        .icon{
          display: inline-block;
          color: #ffffff;
          width: 50px;
          height: 50px;
          text-align: center;
          padding-top: 12px;
          background: #008f44;
          border-radius: 25px;
        }
        .title{
          color: #008f44;
          padding: 0 0 0 40px;
          font-size: 18px;
          display: inline-block;
        }
        .title:hover{
          color: #444444;
        }
      }
      .rdio-b{
        margin: 7px;
      }
      .actions{

        margin-bottom: 3px;
        .btn{
          display:inline-block;
          text-align: right;
          //position:relative;
          //right: 0px;
          float: right;
          margin-left:10px;
          padding:  4px 10px;
        }
      }

    }
  }

.interview
  %h3 Опитування
  - iterator = 1
  - @polls.each do |poll|
    .poll
      - if cookies[poll.id.to_s] == poll.id.to_s
        Ваш голос враховано!
      .head
        .icon
          %i.fa.fa-check-square-o.fa-2x
        %a{:href => "#"}
          .title Опитування №#{iterator}
          -iterator = iterator + 1
      %p= poll.question
      = form_tag(reply_path, method: "post") do
        = hidden_field_tag 'question', "#{poll.id}"
        - poll.replies.sort_by(&:order_answer).each do |reply|
          .rdio-b
            = radio_button_tag('reply', "#{reply.id}", checked = false, options = {class: "color_input"})
            = reply.answer
        .actions.clearfix
          - if cookies[poll.id.to_s] != poll.id.to_s
            = submit_tag("Відправити", :class=>"btn btn-success")
          - if Admin::Poll.count_plus?(poll)
            = link_to "Результати", polls_chart_url(poll), title: "Результати", :class=>"btn btn-primary"
      .chart{:style => "display: none"}
      -#= render :partial => 'home/content/columns_2-data/chart', locals: {poll: poll }

  -#.poll
    .head
      .icon
        %i.fa.fa-check-square-o.fa-2x
      %a{:href => "#"}
        .title Опитування №1
    %p За надання медичних послуг краще сплачувати:
    .rdio-b
      = radio_button_tag 'color', "1green", class: "color_input"
      через касу закладу
    .rdio-b
      = radio_button_tag 'color', "2green", class: "color_input"
      через благодійний фонд при закладі
    .rdio-b
      = radio_button_tag 'color', "3green", class: "color_input"
      купуючи медичну страховку
    .rdio-b.radio.disabled
      = label_tag('color', "я за безкоштовну медицину") do
        = radio_button_tag('color', "4green", checked = false, options = {class: "color_input radio disabled"})
        я за безкоштовну медицину
      -#я за безкоштовну медицину
    .actions.clearfix
      = submit_tag("Відправити", :class=>"btn btn-success")
  -#.poll
