:scss
  .admin_articles_groups{
    .heading{
      .title{
        display: inline-block;
      }
      .btn-new{
        display: inline-block;
        float: right;
        .btn{
          margin:20px 0 5px;
        }
      }
    }
    table{
      border-style:solid;
      border-color:#63B8FF;
    }
  }

.admin_articles_groups
  .container
    .heading
      .title
        %h1 Список груп статей
      .btn-new
        = link_to 'Нова група', new_admin_articles_group_path, :class => 'btn btn-primary'
  .container
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th Назва
          %th URL назва
          %th Опис
          %th Публікувати?
          %th
          %th Дія
          %th
      %tbody
        - @articles_groups.each do |articles_group|
          %tr
            %td= articles_group.title
            %td= articles_group.title_english
            %td= articles_group.description
            %td= articles_group.publish_on
            %td= link_to '<i class="fa fa-eye "></i>'.html_safe, articles_group, title: "Переглянути",  :class => 'btn btn-info'
            %td= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_admin_articles_group_path(articles_group), title: "Редагувати", :class => 'btn btn-primary'
            %td= link_to '<i class="fa fa-trash-o"></i>'.html_safe, articles_group, title: "Видалити", :method => :delete, :data => { :confirm => 'Ви впевнені?' }, :class => 'btn btn-danger'

