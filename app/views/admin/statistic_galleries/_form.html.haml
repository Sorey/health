= form_for @admin_statistic_gallery do |f|
  - if @admin_statistic_gallery.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_statistic_gallery.errors.count, "error")} prohibited this admin_statistic_gallery from being saved:"
      %ul
        - @admin_statistic_gallery.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :publish_on
    = f.check_box :publish_on
  .field
    = f.label :meta_keywords
    = f.text_field :meta_keywords
  .field
    = f.label :meta_description
    = f.text_field :meta_description
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :statistic_gallery
    = f.file_field :statistic_gallery, as: :file, multiple: true
  .actions
    = f.submit 'Save'
